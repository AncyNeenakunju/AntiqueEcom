<%- include('../layouts/head.ejs') %>
<%- include('../users/side.ejs') %>

<div class="col-sm-6">
  <div class="banner_taital">
    <form method="post" autocomplete="on" action="/resend-password?token=<%=token%>" onsubmit="return validateForm()">
      <label for="password">Enter new password:</label>
      <input type="hidden" name="intent" value="<%=intent%>">
      <input type="password" placeholder="Password" class="textBox form-control" name="password" id="password">

      <div class="form-group row">
        <label for="confirmPassword" class="col-sm-4 col-form-label">Confirm new password:</label>
        <div class="col-sm-8">
          <input type="password" placeholder="Confirm Password" class="textBox form-control" name="confirmPassword" id="confirmPassword">
        </div>
      </div>

      <hr>
      <button type="submit" class="btn btn-primary">Reset Password</button>
    </form>

    <% if (typeof message !== "undefined") { %>
      <label class="form-check-label" for="exampleCheck1" style="color:white"><%=message%></label>
    <% } %>
  </div>
</div>
</div>
</div>
</div>

