<%- include('../layouts/adminhead.ejs', { currentPage: 'products' }) %>
        <div class="container tm-mt-big tm-mb-big">
          <div class="row">
            <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
              <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                  <div class="col-12">
                    <h2 class="tm-block-title d-inline-block">Add Product</h2>
                  </div>
                </div>
                <div class="row tm-edit-product-row">
                  <div class="col-xl-6 col-lg-6 col-md-12">
                    <form action="/admin/addproducts" class="tm-edit-product-form"  method="post"  enctype="multipart/form-data">
                      <div class="form-group mb-3">
                        <label
                          for="name"
                          >Product Name
                        </label>
                        <input
                          id="name"
                          name="name"
                          type="text"
                          class="form-control validate"
                          required
                        />
                      </div>
                      <div class="form-group mb-3">
                        <label for="description"
                          >Description</label
                        >
                        <textarea class="form-control validate" rows="3" name="Description"></textarea>
                      </div>
                      <div class="form-group mb-3">
                        <label
                          for="category"
                          >Category</label
                        >
                        <select class="custom-select tm-select-accounts" id="categorySelect" name="category">
                        <% if(category!=="undefined"){ %>
                      
                          <option selected disabled>Select category</option>
                          <% for(i=0;i<category.length;i++) { %>
                          <option><%= category[i].categoryname%></option>
                          <% }  %>
                        <%} else{ %>
                          <option selected>Add category first</option>
                        <%}%>
                        </select>
                      </div>
                      
                      <div class="form-group mb-3">
                        <label for="firstName" class="fl fontLabel">SubCategory</label>
                        <div class="fr">
                          <select id="subcategorySelect"  class="custom-select tm-select-accounts" name="subcategory">
                          <option value=" " disabled  selected></option>
          
                           </select>
                      </div>
                      </div>
                      <div class="row">
                          <div class="form-group mb-3 col-xs-12 col-sm-6">
                              <label
                                for=""
                                >Price
                              </label>
                              <input
                              
                                name="price"
                                type="text"
                                class="form-control validate"
                                data-large-mode="true"
                              />
                            </div>
                            <div class="form-group mb-3 col-xs-12 col-sm-6">
                              <label
                              
                                >Weight
                              </label>
                              <input
                                
                                name="Weight"
                                type="text"
                                class="form-control validate"
                                data-large-mode="true"
                              />
                            </div>
                            <div class="form-group mb-3 col-xs-12 col-sm-6">
                              <label
                              
                                >Brand
                              </label>
                              <input
                    
                                name="brand"
                                type="text"
                                class="form-control validate"
                                data-large-mode="true"
                              />
                            </div>
                            <div class="form-group mb-3 col-xs-12 col-sm-6">
                              <label
                        
                                >Color
                              </label>
                              <input
                                
                                name="Color"
                                type="text"
                                class="form-control validate"
                                data-large-mode="true"
                              />
                            </div>
                            <div class="form-group mb-3 col-xs-12 col-sm-6">
                              <label
                              
                                >Length
                              </label>
                              <input
                              
                                name="Length"
                                type="text"
                                class="form-control validate"
                                data-large-mode="true"
                              />
                            </div>
                            <div class="form-group mb-3 col-xs-12 col-sm-6">
                              <label
                                for="expire_date"
                                >Width
                              </label>
                              <input
                                id="expire_date"
                                name="Width"
                                type="text"
                                class="form-control validate"
                                data-large-mode="true"
                              />
                            </div>
                            <div class="form-group mb-3 col-xs-12 col-sm-6">
                              <label
                                for="expire_date"
                                >Height
                              </label>
                              <input
                                id="expire_date"
                                name="Height"
                                type="text"
                                class="form-control validate"
                                data-large-mode="true"
                              />
                            </div>
                            
                            
                            <div class="form-group mb-3 col-xs-12 col-sm-6">
                              <label
                                for="stock"
                                >Units In Stock
                              </label>
                              <input
                                id="stock"
                                name="stock"
                                type="text"
                                class="form-control validate"
                                required
                              />
                            </div>
                      </div>
                      
                  </div>
                  <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                    <div class="tm-product-img-dummy mx-auto">
                      <i
                        class="fas fa-cloud-upload-alt tm-upload-icon"
                        onclick="document.getElementById('fileInput').click();"
                      ></i>
                    </div>
                    <div class="custom-file mt-3 mb-3">
                      <input id="fileInput" type="file" style="display:none;" name="images">
                      <input
                        type="button"
                        class="btn btn-primary btn-block mx-auto"
                        value="UPLOAD PRODUCT IMAGE"
                        onclick="document.getElementById('fileInput').click();"
                      />
                    </div>
                    <div class="custom-file mt-3 mb-3">
                      <% if (typeof message !=="undefined"){ %>
                        <label class="form-control-label" for="exampleCheck1"  ><%=message%></label>
                       <%}%></div>
                  </div>
                  <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-block text-uppercase">Add Product Now</button>
                  </div>
                </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <footer class="tm-footer row tm-mt-small">
            <div class="col-12 font-weight-light">
              <p class="text-center text-white mb-0 px-4 small">
                Copyright &copy; <b>2018</b> All rights reserved. 
                
                Design: <a rel="nofollow noopener" href="https://templatemo.com" class="tm-footer-link">Template Mo</a>
            </p>
            </div>
        </footer> 
         <script src="js/script.js"></script>
        <script src="js/jquery-3.3.1.min.js"></script>
        <!-- https://jquery.com/download/ -->
        <script src="jquery-ui-datepicker/jquery-ui.min.js"></script>
        <!-- https://jqueryui.com/download/ -->
        <script src="js/bootstrap.min.js"></script>
        <!-- https://getbootstrap.com/ -->
       
      </body>
    </html>
    
   